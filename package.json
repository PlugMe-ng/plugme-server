{
  "name": "plugme-server",
  "version": "0.0.1",
  "description": "This is the core server for PlugMe",
  "main": "index.js",
  "engines": {
    "node": "9.7.1",
    "npm": "5.6.0",
    "yarn": "1.5.1"
  },
  "scripts": {
    "build": "npm run remove-build && npm run build:server && npm run db:reset && npm run db:migrate",
    "build:server": "./node_modules/.bin/babel -d ./build ./src -s --copy-files",
    "build-and-start": "npm run build && npm start",
    "build-and-start:dev": "npm run build && npm run start:dev",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:migrate:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate",
    "db:reset": "./node_modules/.bin/sequelize db:migrate:undo:all && ./node_modules/.bin/sequelize db:migrate",
    "db:reset:test": "NODE_ENV=test ./node_modules/.bin/sequelize db:migrate:undo:all && NODE_ENV=test ./node_modules/.bin/sequelize db:migrate",
    "eslint": "./node_modules/.bin/eslint src",
    "eslint-fix": "./node_modules/.bin/eslint --fix src",
    "heroku-postbuild": "npm run build",
    "remove-build": "./node_modules/.bin/rimraf ./build",
    "start": "NODE_ENV=production ./node_modules/.bin/forever -m 5 ./build/server.js",
    "start2": "node --require babel-register ./build/server.js",
    "start:dev": "NODE_ENV=development nodemon ./build/server",
    "start2:dev": "NODE_ENV=development nodemon --require babel-register ./build/server.js",
    "test": "",
    "test:dev": "NODE_ENV=development npm run build && NODE_ENV=test ./node_modules/mocha/bin/_mocha 'test/**/*.js' --compilers js:babel-core/register --timeout 10000 --exit"
  },
  "pre-commit": [
    "eslint"
  ],
  "repository": "https://github.com/PlugMe-ng/plugme-server",
  "author": "Franklin Chieze <chieze.franklin@gmail.com>",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "jsonwebtoken": "^8.2.1",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "rimraf": "^2.6.2",
    "sequelize": "^4.37.7",
    "sequelize-cli": "^4.0.0",
    "validatorjs": "^3.14.2"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.17.3",
    "pre-commit": "^1.2.2"
  }
}
