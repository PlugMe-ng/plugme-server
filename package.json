{
  "name": "plugme-server",
  "version": "0.0.1",
  "description": "This is the core server for PlugMe",
  "main": "index.js",
  "engines": {
    "node": "9.7.1",
    "npm": "5.6.0",
    "yarn": "1.5.1"
  },
  "scripts": {
    "build": "npm run remove-build && npm run build:server",
    "build:server": "./node_modules/.bin/babel -d ./build ./src -s --copy-files",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "db:migrate": "./node_modules/.bin/sequelize db:migrate",
    "db:reset": "./node_modules/.bin/sequelize db:migrate:undo:all && ./node_modules/.bin/sequelize db:migrate",
    "eslint": "./node_modules/.bin/eslint src",
    "eslint-fix": "./node_modules/.bin/eslint --fix src",
    "heroku-postbuild": "npm run build && npm run db:migrate",
    "remove-build": "./node_modules/.bin/rimraf ./build",
    "start": "node --optimize_for_size --max_old_space_size=920 --gc_interval=100 ./build/server.js",
    "start:dev": "nodemon src/server.js --exec babel-node",
    "test": "NODE_ENV=test nyc -r=text -r=html mocha test/**/*.js --require babel-register --exit"
  },
  "pre-commit": [
    "eslint"
  ],
  "repository": "https://github.com/PlugMe-ng/plugme-server",
  "author": "Franklin Chieze <chieze.franklin@gmail.com>",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "@sentry/node": "^4.0.3",
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "capitalize": "^1.0.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-trimmer": "0.0.3",
    "forever": "^0.15.3",
    "google-auth-library": "^1.6.1",
    "indefinite": "^2.1.1",
    "jsonwebtoken": "^8.2.1",
    "mocha": "^5.2.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "node-schedule": "^1.3.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "pg-native": "^3.0.0",
    "rimraf": "^2.6.2",
    "sequelize": "^4.37.7",
    "sequelize-cli": "^4.0.0",
    "socket.io": "^2.1.1",
    "socketio-jwt-auth": "0.0.6",
    "swagger-ui-express": "^3.0.10",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2",
    "validator": "^10.5.0",
    "validatorjs": "^3.14.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "codecov": "^3.0.2",
    "coveralls": "^3.0.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.17.3",
    "nyc": "^12.0.1",
    "pre-commit": "^1.2.2",
    "source-map-support": "^0.5.6"
  }
}
